@model OgrenciBilgiSistemi.Models.OgretimElemaniModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Anasayfa</title>
    <link rel="stylesheet" href="../wwwroot/Content/css/bootstrap.min.css">
    <link rel="stylesheet" href="../wwwroot/Content/css/Ogrenci.css">
    <link rel="stylesheet" href="../wwwroot/Content/css/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <style>
        body {
            margin: 70px 0 0 200px;
            padding: 0;
            font - family: Arial, sans - serif;
            background - size: cover;
            background - position: center;
            background - repeat: no - repeat;
            height: 100vh;
            background - attachment: fixed;
            overflow: hidden;
        }
    </style>


</head>
<body>
        <div class="top_menu justify-content-start">
            <div class="row">
                <a href="#">
                    <img style="width: 120px; height: 120px; object-fit: cover; cursor: pointer;" src="../wwwroot/Content/images/logo.png" />
                </a>
            </div>
            <div class="Kullanici_menu row justify-content-evenly col-3">
                <span class="bi bi-megaphone col-1" style="font-size: 2.4rem; cursor: pointer;"></span>
                <span class="bi bi-person col-10" style="font-size: 2.5rem; cursor: pointer;">@Model.Adi @Model.Soyadi</span>
            </div>
            <div>
            <a href="@Url.Action("Cikis","OgrElm")">Çıkış</a>
            </div>
        </div>
    <div class="filter_menu pt-5 text-center">
        <ul class="sidebar-menu scrollable position-relative pt-3 mt-3">
            <li class=""><b style="color: white;">Akademisyen bilgi sistemi   <hr> </b></li>
            <li class="nav-item dropdown">
                <a class="nav-link wave-effect" href="index.html">
                    <span class="icon-holder">
                        <i class="fas fa-home"></i>
                    </span>
                    <span class="title">Anasayfa</span>
                </a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link wave-effect" href="#">
                    <span class="icon-holder">
                        <i class="fas fa-folder-open"></i>
                    </span>
                    <span class="title">Ders İşlemleri</span>
                    <span class="arrow">
                        <i class="fas fa-angle-right"></i>
                    </span>
                </a>
                <ul class="dropdown-menu">
                    <li>
                        <a class="sidebar-link" href="#">Öğrenci Not İşlemleri</a>
                    </li>
                    <li>
                        <a class="sidebar-link" href="#">Öğrenci Devamsızlık İşlemleri</a>
                    </li>
                    <li>
                        <a class="sidebar-link" href="#">Sınıf Duyuru İşlemleri</a>
                    </li>
                </ul>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link wave-effect dropdown-toggle" href="#">
                    <span class="icon-holder">
                        <i class="fas fa-fingerprint"></i>
                    </span>
                    <span class="title">Programım</span>
                    <span class="arrow">
                        <i class="fas fa-angle-right"></i>
                    </span>
                </a>
                <ul class="dropdown-menu">
                    <li>
                        <a class="sidebar-link" href="#">Ders Programı</a>
                    </li>
                    <li>
                        <a class="sidebar-link" href="#">Müfredat</a>
                    </li>
                </ul>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#">
                    <span class="icon-holder">
                        <i class="fas fa-folder-open"></i>
                    </span>
                    <span class="title">Diğer İşlemler</span>
                    <span class="arrow">
                        <i class="fas fa-angle-right"></i>
                    </span>
                </a>
                <ul class="dropdown-menu">
                    <li>
                        <a class="sidebar-link" href="#" onclick="ogrelmchangeIframeSrc('OgrElm', 'OgrElmOzlukBilgi',@ViewBag.OgrElmid)">Özlük Bilgileri</a>
                    </li>
                    <li>
                        <a class="sidebar-link" href="#" onclick="ogrelmchangeIframeSrc('OgrElm', 'Mesajlar',@ViewBag.OgrElmid)">Mesajlar</a>
                    </li>
                </ul>
            </li>
        </ul>
    </div>
    <div class="content" style="width: 100%; height: 100%">
        <div class="container-fluid" style="width: 100%; height: 90%">
            <div id="iframediv" style="-webkit-overflow-scrolling: touch; overflow: auto; width: 100%; height: 100%;">
                <iframe id="myIframe" src="@Url.Action("Duyuru", "Ogrenci")" style="width: 100%; padding: 2px; visibility: visible; height: 100%; border: 1px solid #ccc;">
                </iframe>
            </div>
        </div>
    </div>
    <script src="../wwwroot/Content/js/OgrElm.js"></script>
    <script src="../wwwroot/Content/js/bootstrap.bundle.min.js"></script>
    <script src="../wwwroot/Content/js/bootstrap.bundle.min.js.map"></script>
