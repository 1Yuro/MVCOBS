@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model OgrenciBilgiSistemi.Models.DersAcmaModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MufredatKayit</title>
    <link rel="stylesheet" href="../wwwroot/Content/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

</head>
<body>
    <div class="container-fluid row mx-auto border rounded p-3 text-center  bg-light" style="width:100%;height:100vh; overflow: hidden;" id="DersAcmadiv">
        <h1 class="col-12"> @ViewBag.aitmufredat.MufredatAdi</h1>
        <div class="mx-auto text-center row  rounded" style=" " id="DersAcmaEkrani">
            <div class="col-6 border" id="secilecekdiv" style="height:80vh; overflow-y: auto;">
                @foreach (var ilgiliders in ViewBag.ilgilidersler)
                {
                    <div class="border mt-3" id="@ilgiliders.DersID">
                        <div onclick="" class="mufredatgetirdiv m-1 p-3" id="@ilgiliders.DersID" value="@ilgiliders.DersID">
                            @ilgiliders.DersKodu <br> @ilgiliders.DersAdi <br> @(ilgiliders.DersDiliID == 1 ? "Türkçe" : "İngilizce")
                        </div>
                        <div class="row justify-content-evenly">
                            <button type="button" class="btn btn-secondary px-5 col-5">Dersi Ekle</button>
                        </div>
                    </div>
                }
            </div>
            <div class="col-6 border"  style="height:80vh; overflow-y: auto;">
                <div id="eklenecekdiv">

                </div>
                <button type="button" class="btn btn-secondary px-5 col-5">Dersleri Aç</button>
            </div>
        </div>
    </div>
    <script src="../wwwroot/Content/js/Sabitler.js"></script>
    <script src="../wwwroot/Content/js/bootstrap.bundle.min.js"></script>
    <script src="../wwwroot/Content/js/bootstrap.bundle.min.js.map"></script>

</body>
</html>