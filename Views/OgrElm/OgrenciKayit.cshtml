@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model OgrenciBilgiSistemi.Models.OgrenciModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OgrenciKayit</title>
    <link rel="stylesheet" href="../wwwroot/Content/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

</head>
<body>
    <div class="container  row mx-auto m-5 border rounded p-5  bg-light  " id="OgrenciKayitdiv">
        <div class="col m-5 mx-auto text-center  rounded" style=" " id="OgrenciKayitEkrani">
            <H1>ÖĞRENCİ KAYIT</H1>
            <form asp-action="OgrenciKayitKontrol" asp-controller="OgrElm" method="post">
                <div class="row">
                    <div class=" col-6">
                        <div class="input-group mb-3 mt-3">
                            <span class="input-group-text" id="basic-addon1"><i class="bi bi-code"></i></span>
                            <input type="text" asp-for="OgrenciNo" class="form-control" placeholder="Öğrenci No:" aria-label="OgrenciNo" aria-describedby="basic-addon1">
                        </div>
                        <div class="input-group mb-3 mt-3">
                            <span class="input-group-text" id="basic-addon1"><i class="bi bi-person-fill"></i></span>
                            <input type="text" asp-for="Adi" class="form-control" placeholder="Öğrencinin Adı:" aria-label="OgrenciAdi" aria-describedby="basic-addon1">
                        </div>
                        <div class="input-group mb-3 mt-3">
                            <span class="input-group-text" id="basic-addon1"><i class="bi bi-person-fill"></i></span>
                            <input type="text" asp-for="Soyadi" class="form-control" placeholder="Öğrencinin Soyadı:" aria-label="OgrenciSoyadi" aria-describedby="basic-addon1">
                        </div>
                        <div class="input-group mb-3 mt-3">
                            <span class="input-group-text" id="basic-addon1"><i class="bi bi-person-fill"></i></span>
                            <input type="text" asp-for="TcNo" class="form-control" placeholder="Öğrencinin TcNo:" aria-label="OgrenciTcNo" aria-describedby="basic-addon1">
                        </div>
                        <div class="input-group mb-3 mt-3">
                            <span class="input-group-text" id="basic-addon1"><i class="bi bi-person-fill"></i></span>
                            <input type="date" asp-for="DogumTarihi" class="form-control" placeholder="Doğum Tarihi: (dd.mm.yyyy)" aria-label="OgrenciDogumTarihi" aria-describedby="basic-addon1">
                        </div>
                        <div class="input-group mb-3 mt-3">
                            <span class="input-group-text" id="basic-addon1"><i class="bi bi-clipboard"></i></span>
                            <input type="text" asp-for="Email" class="form-control" placeholder="Ogrencinin Email hesabı:" aria-label="OgrenciEmail" aria-describedby="basic-addon1">
                        </div>
                    </div>
                    <div class=" col-6 text-end">

                        @*Bolum*@
                        <div class="mb-3 mt-3">
                            <select asp-for="BolumID" class="form-control">
                                <option value="Secilemez">-- Bolum Seçininiz --</option>
                                @foreach (var bolum in ViewBag.Bolumler)
                                {
                                    <option value="@bolum.BolumID">@bolum.BolumAdi</option>
                                }
                            </select>
                        </div>
                        @*Cinsiyet*@
                        <div class="mb-3 mt-3">
                            <label>
                                <input type="radio" name="Cinsiyet" value="false" asp-for="Cinsiyet" />
                                Erkek
                            </label>
                            <label>
                                <input type="radio" name="Cinsiyet" value="true" asp-for="Cinsiyet" />
                                Kadın
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-12 text-center">
                    <button type="submit" class="btn btn-success px-5">Kaydet</button>
                </div>
            </form>
        </div>

    </div>
    <script src="../wwwroot/Content/js/bootstrap.bundle.min.js"></script>
    <script src="../wwwroot/Content/js/bootstrap.bundle.min.js.map"></script>

</body>
</html>