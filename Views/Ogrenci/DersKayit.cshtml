@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model OgrenciBilgiSistemi.Models.DersAlmaModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MufredatKayit</title>
    <link rel="stylesheet" href="../wwwroot/Content/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

</head>
<body>
    <div class="container-fluid mx-auto border rounded p-3 text-center  bg-light" style="width:100%;height:100vh; overflow: hidden;" id="DersAlmadiv">
        <h1 class="col-12"> Ders Kayit</h1>
        <div class="mx-auto text-center row  rounded" style=" " id="DersAlmaEkrani">
            <div class="border" style="height:40vh;width:100%;max-height:40vh;overflow-y: auto;">
                <table style="width:100%">
                    <thead>
                        <tr>
                            <th>DersKodu</th>
                            <th>DersAdi</th>
                            <th>DersDili</th>
                            <th>Teorik</th>
                            <th>Uygulama</th>
                            <th>Kredi</th>
                            <th>ECTS</th>
                            <th>Ekle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var gelenders in ViewBag.acılandersler)
                        {
                            <tr>
                                <td>@gelenders.DersKodu</td>
                                <td>@gelenders.DersAdi</td>
                                <td>@(gelenders.DersDiliID == 1 ? "Türkçe" : "İngilizce")</td>
                                <td>@gelenders.Kredi</td>
                                <td>@gelenders.Uygulama</td>
                                <td>@gelenders.Kredi</td>
                                <td>@gelenders.ECTS</td>
                                <td><button onclick="ekleButtonClickHandler()">Ekle</button></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="mt-3 text-start border" style="height:40vh;width:100%">
                <h4>Kredi: 0</h4>
                <div style="height:30vh;">
                    <table id="secilenderslertablo" style="max-height:30vh;width:100%;overflow-y: auto;">
                        <thead>
                            <tr>
                                <th>DersKodu</th>
                                <th>DersAdi</th>
                                <th>DersDili</th>
                                <th>Teorik</th>
                                <th>Uygulama</th>
                                <th>Kredi</th>
                                <th>ECTS</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
                <button type="button" class="btn btn-secondary px-5 text-end"> Kesinleştir</button>
            </div>
        </div>
    </div>

    <script src="../wwwroot/Content/js/DersKayit.js"></script>
    <script src="../wwwroot/Content/js/bootstrap.bundle.min.js"></script>
    <script src="../wwwroot/Content/js/bootstrap.bundle.min.js.map"></script>

</body>
</html>